<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Framgia test system", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in? %>
          <% if can? :manage, :all %>
            <li><%= link_to "Users", admin_users_path %></li>
            <li><%= link_to "Subjects", admin_subjects_path %></li>
            <li><%= link_to "Exams", admin_exams_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">           
              <li><%= link_to "Profile", current_user.admin? ? 
              admin_user_path(current_user) : current_user %></li>
              <li><%= link_to "Settings", current_user.admin? ?
              edit_admin_user_path(current_user) : edit_user_registration_path %></li>     
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>